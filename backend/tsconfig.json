{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6"],
    "types": ["jest", "reflect-metadata", "node"],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "downlevelIteration": true,
    "outDir": "build",
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
